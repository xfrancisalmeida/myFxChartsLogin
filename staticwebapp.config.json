{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "openIdIssuer": "https://login.microsoftonline.com/<your-tenant-id>"
        }
      }
    },
    "routes": [
      {
        "route": "/*",
        "allowedRoles": ["authenticated"],
        "unauthenticated_action": "RedirectToLoginPage"
      }
    ]
  }
}
